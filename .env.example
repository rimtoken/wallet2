# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rimtoken_db

# Authentication & Security (Required)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
SESSION_SECRET=your-super-secure-session-secret-key-at-least-32-characters-long
BCRYPT_ROUNDS=12

# External API Keys (Optional but recommended)
COINGECKO_API_KEY=your-coingecko-api-key
INFURA_API_KEY=your-infura-project-key
ALCHEMY_API_KEY=your-alchemy-api-key

# Blockchain Network RPC URLs (Optional - fallbacks to public RPCs)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Payment Provider Keys (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Communication Services (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_api_key

# Application Settings
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# External Services (Optional)
NOTIFICATION_SERVICE_URL=https://your-notification-service.com
ANALYTICS_SERVICE_URL=https://your-analytics-service.com